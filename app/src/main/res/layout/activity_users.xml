<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="400dp"
        android:background="@drawable/hymmen">
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn1"
        android:layout_width="115dp"
        android:layout_height="96dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/machinedata"
        android:textColor="@color/colorText"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="280dp"
        android:text="@string/machine_status"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_columnWeight="1"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="170dp"
        android:layout_rowWeight="1"
        android:background="@drawable/maintenance"
        android:textColor="@color/colorText"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginTop="280dp"
        android:text="@string/maintenance"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btn3"
        android:layout_width="117dp"
        android:layout_height="84dp"
        android:layout_columnWeight="1"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="320dp"
        android:layout_rowWeight="1"
        android:background="@drawable/sparepart"
        android:textColor="@color/colorText"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="410dp"
        android:text="@string/spare_parts"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_columnWeight="1"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="320dp"
        android:layout_rowWeight="1"
        android:background="@drawable/contact"
        android:textColor="@color/colorText"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:layout_marginTop="410dp"
        android:text="@string/contact"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>